{
  "name": "tattoo-crm",
  "version": "1.0.0",
  "description": "Application CRM pour tatoueurs",
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm run backend\" \"npm run frontend\"",
    "start": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mongodb-memory-server": "^10.2.0"
  }
}
